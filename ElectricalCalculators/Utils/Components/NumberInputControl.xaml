<UserControl x:Class="ElectricalCalculators.Utils.Components.NumberInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalCalculators.Utils.Components"
             mc:Ignorable="d"
             x:Name="root">
    <TextBox x:Name="textInput" Text="{Binding ElementName=root, Path=RawText, UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>
