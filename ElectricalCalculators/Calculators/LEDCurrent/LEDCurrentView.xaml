<UserControl x:Class="ElectricalCalculators.Calculators.LEDCurrent.LEDCurrentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalCalculators.Calculators.LEDCurrent"
             xmlns:models="clr-namespace:ElectricalCalculators.Models.Prefixes"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="PrefixesData"
            ObjectType="{x:Type models:PrefixModel}"
            MethodName="GetAllPrefixes"
        />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0">VCC</TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    MinWidth="100"
                    TextChanged="TextBox_TextChanged"
                    Text="{Binding Path=VCC, UpdateSourceTrigger=LostFocus}"
                    GotFocus="TextBox_GotFocus"
                />

                <TextBlock Grid.Row="1" Grid.Column="0">D1 Forward Voltage</TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    MinWidth="100"
                    TextChanged="TextBox_TextChanged"
                    Text="{Binding Path=ForwardVoltage, UpdateSourceTrigger=LostFocus}"
                    GotFocus="TextBox_GotFocus"
                />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                >
                    D1 Forward Current (mA)
                </TextBlock>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    MinWidth="100"
                    TextChanged="TextBox_TextChanged"
                    Text="{Binding Path=ForwardCurrent, UpdateSourceTrigger=PropertyChanged}"
                    GotFocus="TextBox_GotFocus"
                >
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding Path=CalculateCmd}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Grid Grid.Row="3" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        HorizontalAlignment="Center"
                    >
                        Results
                    </TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="0">R1 Resistance</TextBlock>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Text="{Binding Path=Resistor.Base}"
                    />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Text="{Binding Path=Resistor.ShortPrefix}"
                    />

                    <TextBlock Grid.Row="2" Grid.Column="0">Power Demand</TextBlock>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        MinWidth="100"
                        Text="{Binding Path=Power.Base}"
                    />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        MinWidth="100"
                        Text="{Binding Path=Power.ShortPrefix}"
                    />
                </Grid>
            </Grid>
        </Border>

        <Image Grid.Column="1" Source="/Resources/LEDCurrentLim.PNG"/>
    </Grid>
</UserControl>
